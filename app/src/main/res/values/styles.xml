<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:fontFamily">@font/overpass_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SearchView">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_60</item>
        <item name="android:textColorHint">@color/white_60</item>
    </style>

</resources>
