<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/color_primary</item>
        <item name="android:fontFamily">@font/overpass_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SearchView">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_60</item>
        <item name="android:textColorHint">@color/white_60</item>
    </style>

    <style name="Spinner">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:popupTheme">@style/SpinnerPopup</item>
    </style>

    <style name="SpinnerPopup">
        <item name="android:backgroundTint">@color/color_primary</item>
    </style>

    <style name="DetailedActivityLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailedActivityValue">
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/empty_data</item>
    </style>

</resources>